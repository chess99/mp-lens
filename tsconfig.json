{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": ".",
    "lib": ["ES2019", "DOM"]
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
} 