{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2018", "ES2019", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules", "**/*.test.ts", "dist", ".ui-build-temp", "scripts/**/*.js"]
}
